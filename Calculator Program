number1 = float(input("enter first number:"))
number2 = float(input("enter second number:"))
print("choose an operator: + , _ , * , / , % ")
operator = input("enter an operato:")
if operator == "+":
    result = number1 + number2
    print("Result:",result)
elif operator == "-":
    result = number1 - number2
    print("Result:",result)
elif operator == "*":
    result = number1 * number2
    print("Result:",result)
elif operator == "/":
   if number2 != 0:
    result = number1 / number2
    print("Result:",result)
   else:
        print("Error: Cannot divide by zero.") 
elif operator == "%":
   if number2 != 0:
    result = number1 % number2
    print("Result:",result)
   else:
        print("Error: Cannot find remainder with zero.")
else:
    print("Invalid operator. Please choose one of +, -, *, /, %.")
